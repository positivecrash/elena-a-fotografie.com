- var activeClass = 'active'

header(role='banner')
	.container-padding

		section
			a(href="#")#header-logo: img(alt="", src="assets/i/Anisimova-Logo-g.png")

			#header-links
				.nav-g--sm
					div
						a.header-links--item(href="#", target="_blank"): i.i-facebook.d-block

					div
						a.header-links--item(href="#", target="_blank"): i.i-instagram.d-block

					.dropdown
						a.header-links--item.dropdown-toggle(href="#") DE
						.dropdown-content.nav-v
							a.header-links--item(href="#") RU
							a.header-links--item.active(href="#") DE

		section#nav-header.nav-wrapper
			.nav-inner
				.nav-content
					nav.nav-g
						if active == "about"
							a(href="#", class=activeClass) über Mich
						else
							a(href="#") über Mich
						
						if active == "price"
							a(href="#", class=activeClass) Preise
						else
							a(href="#") Preise

						if active == "gift"
							a(href="#", class=activeClass) Geschenkgutscheine & Sonderangebote
						else
							a(href="#") Geschenkgutscheine & Sonderangebote

						if active == "tips"
							a(href="#", class=activeClass) Fotoshootings Tipps
						else
							a(href="#") Fotoshootings Tipps

						if active == "contact"
							a(href="#", class=activeClass) Kontakt
						else
							a(href="#") Kontakt